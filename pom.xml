<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.daasworld</groupId>
    <artifactId>karate-for-kafka</artifactId>
    <packaging>pom</packaging>
    <version>${revision}</version>
    <name>karate-for-kafka</name>
    <description>Using Karate to Test Kafka</description>

    <properties>
        <revision>0.0.2-SNAPSHOT</revision>

        <java.version>1.8</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <kafka-streams.version>2.4.0</kafka-streams.version>
        <kafka-clients.version>2.4.0</kafka-clients.version>
        <kafka-streams-test-utils.version>2.4.0</kafka-streams-test-utils.version>
        <karate.version>0.9.5</karate.version>
        <jackson.version>2.10.2</jackson.version>

        <junit.version>4.12</junit.version>
        <mockito-core.version>3.2.4</mockito-core.version>
        <slf4j.version>1.6.2</slf4j.version>
        <exec-maven-plugin.version>1.6.0</exec-maven-plugin.version>
        <maven-compiler-plugin.version>3.8.1</maven-compiler-plugin.version>
    </properties>

    <modules>
        <module>karate-kafka</module>
        <module>order</module>
        <module>wordcount</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>flatten-maven-plugin</artifactId>
                <version>1.2.1</version>
                <configuration>
                </configuration>
                <executions>
                    <!-- enable flattening -->
                    <execution>
                        <id>flatten</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>flatten</goal>
                        </goals>
                    </execution>
                    <!-- ensure proper cleanup -->
                    <execution>
                        <id>flatten.clean</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>